---
import type {HTMLAttributes} from "astro/types";
import Card from "./Card.astro";

type Props = {
	label: string
	color?: string
	backgroundColor: string
	href: HTMLAttributes<"a">['href']
	size?: number
	mobileSize?: number
};

const { href, label, ...props } = Astro.props as Props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);


---

<Card {...props}>
	<a href={href}>
		<p class="label">{label}</p>
		<p class="source">Zenn</p>
		<p class="timestamp">2024-01-01</p>
	</a>
</Card>
<style>
	a {
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0 3dvmin;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		color: inherit;
		text-decoration: none;
		//overflow: hidden;
		position: relative;
	}
	a:hover {
		mix-blend-mode: overlay;
		background-color: white;
		color: black
	}
	p {
		margin: 0;
	}
	p.label {
		font-size: 2rem;
	}
	p.source {
		font-size: 2rem;
	}
	p.source:before {
		content: "@";
	}
	p.timestamp {
		font-size: 2rem;
	}
</style>
